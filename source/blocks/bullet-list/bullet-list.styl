@import '../../styles/*.styl'

.bullet-list
  display block
  font-size 14rem
  font-family Montserrat, OpenSans, sans-serif

  &_title-size_l
    .bullet-list__title
      font-weight bold
      text-transform capitalize
      font-size 19rem
      margin 0 0 18rem 19rem
      letter-spacing -0.4rem

  &__title
    font-weight bold
    text-transform uppercase
    font-size 12rem
    margin 0 0 14rem 0

  &__content
    display block
    padding 0

  &__item
    margin 10rem 0 0 0
    line-height 24rem
    list-style-type none
    display flex
    align-items start

    &:before
      display block
      content ''
      circle(10rem)
      background-color $dark-shade-25
      margin-right 10.5rem
      margin-top 6rem
