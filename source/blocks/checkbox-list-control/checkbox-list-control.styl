@import '../../styles/*.styl'

.checkbox-list-control
  display block
  position relative
  font-size 12rem
  user-select none
  transition $anim-duration
  font-family Montserrat, OpenSans, sans-serif

  &__arrow-toggle
    position absolute
    top 0
    right 0
    display none

    &:checked + .checkbox-list-control__title:after
      animation anim-arrow-open $anim-duration forwards

  &__title
    display inline-block
    margin 0 0 7rem 0
    text-transform uppercase
    font-size 12rem
    font-weight bold

    &:after
      display block
      content ''
      position absolute
      top 5rem
      right 15rem
      background $dark-shade-75
      clip-path $arrow-down
      transition $anim-duration
      size(11.5rem, 7.5rem)
      box-sizing border-box
      animation anim-arrow-close $anim-duration forwards
      cursor pointer

    &:before
      display: block
      content: ''
      position absolute
      top 0
      right 11rem
      size(20rem)
      cursor pointer

  .checkbox-list-content
    display block
    transition $anim-duration
    overflow hidden
    max-height 300rem

    &__checkbox
      display none

    &__checkbox:checked + .checkbox-list-content__item-view:after
      animation anim-check-open $anim-duration forwards

    &__checkbox:checked + .checkbox-list-content__item-view
      border-color $button-color

    &__item
      display flex
      font-size 14rem
      transition $anim-duration
      margin 10rem 0 0 0
      padding 0
      position relative
      z-index 1

      &:hover
        color $dark-shade-100

    &__item-title
      font-size 14rem
      font-weight bold
      margin 0
      margin-bottom 4rem
      display inline-block

      & + .checkbox-list-content__item-description
        font-size 12rem

    &__item-description
      font-size 14rem
      padding 2rem 0 0 0
      margin 0
      display inline-block

    &__item-view
      display block
      content ''
      size(20rem)
      min-size(20rem)
      border 1rem solid $dark-shade-25
      border-radius 4rem
      margin-right 10rem
      box-sizing border-box
      cursor pointer

      &:after
        display block
        content ''
        position absolute
        top 5rem
        left 5rem
        background $main-gradient
        clip-path $check1
        transition transform $anim-duration
        size(10rem)
        box-sizing border-box
        animation anim-check-close $anim-duration forwards

      &:hover:before
        border-color $button-color

  &__arrow-toggle:not(:checked) ~ .checkbox-list-content
    max-height 0

  &_static
    .checkbox-list-control__title:after
      display none

  @keyframes anim-arrow-close
    from {
      clip-path: $arrow-up;
    }
    50% {
      clip-path: $arrow-m;
    }
    to {
      clip-path: $arrow-down;
    }

  @keyframes anim-arrow-open
    from {
      clip-path: $arrow-down;
    }
    50% {
      clip-path: $arrow-m;
    }
    to {
      clip-path: $arrow-up;
    }

  @keyframes anim-check-open
    from {
      clip-path: $check0;
    }
    50% {
      clip-path: $check1;
    }
    to {
      clip-path: $check;
    }

  @keyframes anim-check-close
    from {
      clip-path: $check;
    }
    50% {
      clip-path: $check1;
    }
    to {
      clip-path: $check0;
    }
