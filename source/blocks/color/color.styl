@import '../../styles/*.styl'

.color
  display flex
  padding-bottom 20px
  font-size 19rem
  line-height 29rem
  color $dark-shade-100

  &__logo
    min-width 70px
    height 70px
    border-radius 6px

    &_dark-shade-100
        background-color $dark-shade-100
    &_dark-shade-75
      background-color $dark-shade-75
    &_dark-shade-50
      background-color $dark-shade-50
    &_dark-shade-25
      background-color $dark-shade-25
    &_dark-shade-5
      background-color $dark-shade-5
    &_purple
      background-color $button-color
    &_green
      background-color $button-sec-color

  &__description
    padding 7px 0 0 40px

  &__title
    font-family Quicksand, OpenSans, sans-serif
    font-weight bold

  &__content
    font-family Quicksand, OpenSans, sans-serif
    font-weight normal
    letter-spacing -0.8rem
