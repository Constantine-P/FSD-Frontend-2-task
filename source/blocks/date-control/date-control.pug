mixin date-control(control)
	+b.date-control&attributes(attributes)
		+e('h3').title=control.title
		+e('input').content#content(type="text" placeholder="ДД.ММ.ГГГГ" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" form = control.form name = control.name autocomplete = "off" required)
		+e.arrow-down
