.date-control
  background-color background-color
  margin-top 21rem
  position relative

  &__title
    font-size 12rem
    margin 0

  &__content
    border 1rem solid main-color-25
    border-radius 4rem
    size(100%, 44rem)
    margin-top 5rem
    padding-left 15rem
    padding-right 35rem

    &:active, &:hover, &:focus
      outline none

    &_active
      border 1rem solid main-color-50
      transition 200ms

  &__arrow-down
    display block
    content ""
    position absolute
    size(24rem)
    background-image url("../../resources/arrow_down-24px.svg")
    background-size contain
    top 30rem
    right 10rem

    &:hover
      cursor pointer

  &_arrival, &_departure
    width calc(50% - 10rem)
