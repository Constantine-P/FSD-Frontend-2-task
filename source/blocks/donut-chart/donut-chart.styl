@import '../../styles/*.styl'

.donut-chart
  display flex
  justify-content flex-start
  align-items flex-start
  width 363rem
  max-width 100%
  box-sizing border-box

  @media (max-width 1000px)
    justify-content space-around

  @media (max-width 400px)
    width auto
    flex-direction column
    align-items center

  &__donut
    margin-right 27rem

    @media (max-width 1000px)
      margin 0

  &__legend
    margin 27rem 0 0 0
    padding 0

    @media (max-width 400px)
      margin 5rem 0 0 0

  &__legend-row
    display flex
    justify-content flex-start
    align-items center
    padding 3.5rem 0

    &:hover .donut-chart__legend-circle
      transform scale(1.1)

  &__legend-text
    padding-left 5rem

  &__legend-circle
    display block
    circle(10rem)
    transition $anim-duration

    &_best
      background $excellent-gradient

    &_good
      background $secondary-gradient

    &_satisfactory
      background $main-gradient

    &_unsatisfactory
      background $unsatisfactory-gradient
