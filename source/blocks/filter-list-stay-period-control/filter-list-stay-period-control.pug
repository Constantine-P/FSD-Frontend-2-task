mixin filter-list-stay-period-control
	include ../date-control/date-control
	include ../calendar/calendar
	+b.filter-list-stay-period-control&attributes(attributes)
		+date-control({
			title: 'ДАТЫ ПРЕБЫВАНИЯ В ОТЕЛЕ',
			name: 'arrival-departure-date',
			form: '',
			placeholder: 'дд.ммм - дд.ммм',
			pattern: ''
		}).date-control_arrival-departure
		+date-control({
			title: 'ПРИБЫТИЕ',
			name: 'arrival-date',
			form: 'room-search-form',
			placeholder: 'ДД.ММ.ГГГГ',
			pattern: '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}'
		}).date-control_arrival
		+date-control({
			title: 'ВЫЕЗД',
			name: 'departure-date',
			form: 'room-search-form',
			placeholder: 'ДД.ММ.ГГГГ',
			pattern: '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}'
		}).date-control_departure
		+calendar
