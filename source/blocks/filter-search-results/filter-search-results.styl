.filter-search-results
  display flex
  flex-direction column
  align-items center
  padding-top 20rem
  max-width 834rem

  &__title
    font-size 24rem
    font-weight bold
    margin 0
    margin-bottom 21rem
    letter-spacing -0.5rem

  .card-wrapper
    display grid
    grid-template-columns repeat(auto-fill, 270rem);
    grid-column-gap 12rem
    grid-row-gap 21rem
    justify-content center
    width 100%
