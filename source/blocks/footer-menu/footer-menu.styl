@import '../../styles/*.styl'

.footer-menu
  display flex
  flex-direction row
  justify-content space-between
  align-items baseline
  flex-wrap wrap
  padding-left 39.5rem

  @media (max-width 1200px)
    justify-content space-evenly

  @media (max-width 550px)
    padding-left 0

  &__block
    display block
    min-width 200rem

    @media (max-width 700px)
      &:nth-child(n + 2)
        margin-top 30rem

  &__block-title
    font-weight bold
    font-size 12rem
    text-transform uppercase
    margin 0
    margin-top 3rem

  &__block-content
    display flex
    flex-direction column
    justify-content top
    font-size 14rem

  &__block-content-item
    margin-top 21rem

    &:link
      color $dark-shade-50
      text-decoration none

    &:hover
      color $dark-shade-50
      text-decoration underline

    &:visited
      color $dark-shade-50
