.guest-reviews
  display grid
  grid-template 21rem 130rem / 630rem 1fr
  grid-auto-rows 130rem
  grid-auto-flow row
  grid-column 1 / span 2
  grid-row 2
  grid-row-gap 23rem
  margin-top 16rem
  width 710rem

  &__title
    font-size 19rem
    font-weight bold
    letter-spacing -0.25rem
    grid-column 1
    grid-row 1

  &__reviews-count
    grid-column 2
    grid-row 1
    margin-top 5rem
    justify-self end

  .review
    display grid
    grid-auto-flow row
    grid-template 24rem 24rem 72rem / 47rem 4fr 7fr
    grid-column-gap 10.5rem
    font-size 14rem
    line-height 24rem
    grid-column span 2

    &__logo
      circle(48rem)
      grid-row span 2
      box-shadow 0 10px 20px rgba(31, 32, 65, 0.1)

    &__description
      grid-column 2 / span 2
      grid-row 3
      margin-top 10rem

    &__name
      grid-column 2
      grid-row 1
      font-weight bold
      vertical-align center

    &__date
      grid-column 2
      grid-row 2

    &__likes
      grid-column 1
      grid-row 3
      font-size 10rem
      size(40rem, 20rem)
      border 1rem solid button-color
      border-radius 10rem
      color button-color

      display flex
      justify-content space-evenly
      align-items center
      margin-left 1rem
      padding-right 3rem
      margin-top 12rem
      justify-self center

    &__heart
      size(10rem, 8rem)
