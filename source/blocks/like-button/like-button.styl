@import '../../styles/*.styl'

.like-button
  display flex
  justify-content space-evenly
  align-items center
  justify-self center
  font-size 10rem
  size(40rem, 20rem)
  border 1rem solid $button-color
  border-radius 10rem
  color $button-color
  padding-right 3rem
  user-select none
  cursor pointer
  box-sizing border-box

  &__input
    display none

  &__next-value
    display none

  &__heart
    size(10rem, 8rem)
    background-image url('images/favorite_border.svg')

  &__input:checked
    & ~ .like-button__value
      display none

    & ~ .like-button__next-value
      display block

    & ~ .like-button__heart
      background-image url('images/favorite.svg')


