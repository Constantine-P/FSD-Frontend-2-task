@import '../../styles/*.styl'

.nav
  display flex
  align-items center
  justify-content center
  flex-wrap wrap
  transition $anim-duration
  font-family Montserrat, OpenSans, sans-serif

  @media (max-width 1000px)
    flex-direction column
    justify-content start
    align-items start
    background-color $background-color

  &__menu
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    margin 0
    padding 0

    @media (max-width 1000px)
      flex-direction column
      justify-content start
      align-items start
      background-color $background-color
      width 100%

  &__item-content-wrapper
    width 100%
    cursor pointer

  &__menu-item
    display flex
    justify-content space-between
    align-items center
    margin-right 28rem
    font-size 14rem
    list-style none
    font-family Montserrat, OpenSans, sans-serif
    position relative
    line-height 3
    cursor pointer

    @media (max-width 1200px)
      margin-right 15rem

    @media (max-width 1000px)
      display flex
      flex-direction column
      align-items flex-start
      width 100%
      box-sizing border-box

      &:hover
        background-color $dark-shade-5

    &_bold
      font-weight bold
      color $dark-shade-75

  &__menu-item-toggle
    display none

    &:checked ~ .nav__dropdown-menu
      max-height 1000rem
      transition-timing-function ease-in

    &:checked ~ .nav__item-arrow
      animation anim-arrow-open $anim-duration forwards

  &__item-content
    text-decoration none
    color $dark-shade-50
    user-select none

    &:hover
      color $dark-shade-100

    @media (max-width 1000px)
      padding-left 20rem

  &__dropdown-menu
    display flex
    position absolute
    flex-direction column
    top 40rem
    min-width 110rem
    background-color $background-color
    box-sizing border-box
    box-shadow 0 0 25rem rgba(0, 0, 0, 0.1)
    border-radius 4rem
    padding 0
    max-height 0
    overflow hidden
    transition $anim-duration

    @media (max-width 1000px)
      position static
      box-shadow none
      width 100%
      padding 0

  &__dropdown-menu-row
    line-height 2.5
    white-space nowrap
    padding 0 10rem 0 10rem
    transition 250ms
    color $dark-shade-50
    text-decoration none
    background-color $background-color
    list-style-type none

    &:hover
      background-color $dark-shade-5

    @media (max-width 1000px)
      padding-right 20rem
      padding-left 30rem

  &__dropdown-menu-row-content
    display inline-block
    width 100%
    text-decoration none
    color inherit

    &:visited
      color inherit

  &__item-arrow
    display inline-block
    size(12rem, 7.5rem)
    margin-top 3rem
    clip-path $arrow-down
    background-color $dark-shade-75
    animation anim-arrow-close $anim-duration forwards
    margin-left 5rem

  &__item:last-child
    margin-right 0

  &__button-login
    size(auto, 34rem)
    margin-right 23rem

    @media (max-width 1200px)
      display none

    @media (max-width 1000px)
      display block
      margin 10rem 15rem

  &__button-register
    size(auto, 34rem)

    @media (max-width 1000px)
      margin 10rem 15rem

  &__name
    padding-left 30rem
    margin-left 5rem
    border-left 1rem solid $dark-shade-10
    line-height 30rem


  @keyframes anim-arrow-close
    from {
      clip-path: $arrow-up;
    }
    50% {
      clip-path: $arrow-m;
    }
    to {
      clip-path: $arrow-down;
    }

  @keyframes anim-arrow-open
    from {
      clip-path: $arrow-down;
    }
    50% {
      clip-path: $arrow-m;
    }
    to {
      clip-path: $arrow-up;
    }
