@import '../../styles/*.styl'

.nav
  display flex
  align-items center
  justify-content center
  flex-wrap wrap
  transition $anim-duration
  font-family Montserrat, OpenSans, sans-serif

  @media (max-width 1000px)
    flex-direction column
    justify-content start
    align-items start
    background-color $background-color

  &__menu
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    margin 0
    padding 0

    @media (max-width 1000px)
      flex-direction column
      justify-content start
      align-items start
      background-color $background-color
      width 100%

  &__menu-item
    display flex
    justify-content space-between
    align-items center
    margin-right 28rem
    font-size 14rem
    list-style none
    font-family Montserrat, OpenSans, sans-serif
    position relative
    line-height 3

    &:hover .nav__dropdown-menu
      animation dropdown 500ms forwards
      z-index 1
      display flex

    @media (max-width 1200px)
      margin-right 15rem

    @media (max-width 1000px)
      display flex
      flex-direction column
      align-items flex-start
      width 100%
      box-sizing border-box

      &:hover
        background-color $dark-shade-5

      &:hover .nav__dropdown-menu .nav__dropdown-menu-row
        line-height 2.5

    &_bold
      font-weight bold
      color $dark-shade-75

  &__item-content
    display flex
    align-items center
    text-decoration none
    color $dark-shade-50

    @media (max-width 1000px)
      padding-left 20rem
      padding-right 20rem

  &__dropdown-menu
    display flex
    position absolute
    flex-direction column
    top 40rem
    min-width 110rem
    background-color $background-color
    z-index -1
    opacity 0
    border 1rem solid rgba(0, 0, 0, 0.12)
    box-sizing border-box
    box-shadow 0 0 25rem rgba(0, 0, 0, 0.1)
    border-radius 4rem

    @media (max-width 1000px)
      position static
      border none
      box-sizing border-box
      box-shadow none
      transition anim-duration
      opacity 1
      overflow hidden
      width 100%
      padding 0

  &__dropdown-menu-row
    line-height 2.5
    white-space nowrap
    padding 0 10rem 0 10rem
    transition 250ms
    color $dark-shade-50
    text-decoration none
    background-color $background-color

    &:hover
      background-color $dark-shade-5

    &::after
      display block
      content ''
      position absolute
      top -10rem
      left 10rem
      border-bottom 10rem solid $background-color
      border-right 10rem solid transparent
      border-left 10rem solid transparent

    &::before
      display block
      content ''
      position absolute
      top -11rem
      left 9rem
      border-bottom 11rem solid rgba(0, 0, 0, 0.12)
      border-right 11rem solid transparent
      border-left 11rem solid transparent

    @media (max-width 1000px)
      line-height 0
      transition $anim-duration
      width 100%
      box-sizing border-box
      padding-right 20rem
      padding-left 20rem

      &::after, &::before
        display none

  &__item-arrow
    display flex
    justify-content center
    align-items center
    color $dark-shade-50
    opacity 0.5
    max-size(17rem, 15rem)
    size(17rem, 15rem)

    &:after
      display block
      content ''
      size(12rem, 7.5rem)
      margin-top 3rem
      clip-path $arrow-down
      background-color $dark-shade-75

  &__item:last-child
    margin-right 0

  &__button-login
    size(auto, 34rem)
    margin-right 23rem

    @media (max-width 1200px)
      display none

    @media (max-width 1000px)
      display block
      margin 10rem 15rem

  &__button-register
    size(auto, 34rem)

    @media (max-width 1000px)
      margin 10rem 15rem

  &__name
    padding-left 30rem
    margin-left 5rem
    border-left 1rem solid $dark-shade-10
    line-height 30rem

  @keyframes dropdown
    from {
      opacity: 0;
      z-index: 1
    }
    to {
      opacity: 1;
      z-index: 1
    }
