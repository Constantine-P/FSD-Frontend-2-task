.page-footer
  display block

  .page-footer-top
    display flex
    justify-content space-between
    align-items top
    height 372rem
    padding-top 100rem
    padding-left 140rem
    padding-right 140rem

    .footer-logo
      width 260rem
      margin-right 40rem

      &__content
        margin-top 16rem
        line-height 1.8

    .footer-subscribe
      display block
      width 260rem

      &__title
        font-weight bold
        font-size 12rem
        text-transform uppercase
        margin 0
        margin-top 5rem

      &__content
        display flex
        flex-direction column
        justify-content top
        font-size 14rem
        margin-top 17rem
        line-height 1.8

  .page-footer-bottom
    height 70rem
    display flex
    justify-content space-between
    flex-direction row
    align-items center
    border-top 1rem solid main-color-25
    padding-left 140rem
    padding-right 140rem

    .socials
      display flex
      justify-content space-between
      width 112rem

      img
        max-size(20rem)
