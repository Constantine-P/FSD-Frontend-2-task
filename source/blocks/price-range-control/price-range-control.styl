.price-range-control
  display block
  position relative
  margin-top 30rem
  font-size 12rem
  user-select none

  &__title
    margin 0
    text-transform uppercase
    margin-bottom 20rem
    font-size 12rem

  &__description
    font-size 12rem
    margin-top 9rem

  &__values
    position absolute
    top 0
    right 0

  .slider
    display block
    position relative

    .line-wrapper
      height 16rem
      display flex
      flex-direction row
      justify-content left
      width 100%

      .line
        position absolute
        width 100%
        height 6rem
        border 1rem solid main-color-25
        border-radius 3rem
        margin 3rem 0 3rem 0

      .fill-line
        margin-left 0
        width 100%
        height 6rem
        background secondary-gradient
        margin-top 3rem
        z-index 1
        position relative
        //transition anim-duration

        &::after, &::before
          display block
          content ''
          position absolute
          circle(16rem)
          box-sizing border-box
          background secondary-gradient
          border 2rem solid background-color
          z-index 2
          top -5rem
          cursor pointer

        &::after
          left -8rem

        &::before
          right -8rem
