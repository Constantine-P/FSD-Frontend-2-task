@import '../../styles/*.styl'

.rate-button
  display flex
  justify-content space-between
  grid-row 2
  grid-column 1 / span 2
  width 118rem
  justify-self flex-start
  flex-direction row-reverse

  &__input
    display none

  &__input:checked ~ .rate-button__star:after
    clip-path $star

  &__star
    position relative
    size(22rem)

    &:after
      display block
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background $main-gradient
      clip-path $emptyStar
