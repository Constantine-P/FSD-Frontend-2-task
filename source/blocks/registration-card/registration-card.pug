include ../text-field/text-field
include ../toggle-control/toggle-control
include ../button/button
include ../../blocks/radio/radio

mixin registration-card
  +b("form").registration-card(name = "registration-card" method = "GET" action = "https://echo.htmlacademy.ru" enctype = "text/plain")
    +e("h2").title Регистрация аккаунта
    +e.content
      +e.name
        +text-field({name: "name", form: "registration-card", placeholder: "Имя"})
      +e.surname
        +text-field({name: "surname", form: "registration-card", placeholder: "Фамилия"})
      +e.sex-buttons
        +e.sex-button
          +radio({text: "Мужчина", name: "radio-buttons", checked: true})
        +e.sex-button
          +radio({text: "Женщина", name: "radio-buttons", checked: false})
      +e.date-of-birth
        +text-field({
          title: "Дата рождения", name: "date-of-birth", placeholder: "ДД.ММ.ГГГГ",
          pattern: "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}"
        }).js-masked
      +e.email
        +text-field({ title: "данные для входа в сервис", type: "email", name: "email", placeholder: "Email"})
      +e.password
        +text-field({type: "password", name: "password", placeholder: "Пароль"})
      +e.offers
        +toggle-control({label: "Получать спецпредложения", name: "receive-special-offers"})
      +e.pay
        +button({type: "submit", value: "Перейти к оплате"})._solid._has-arrow
      +e.login Уже есть аккаунт на Toxin
        +e.login-btn
          +button({type: "link", href: "sign-in.html", value: "Войти"})
