mixin registration-form
	+b.registration-form
		include ../date-control/date-control
		include ../text-field/text-field
		include ../toggle-control/toggle-control
		include ../button-submit/button-submit
		include ../btn-link/btn-link

		+e('form')(name = "registration-form" id = "registration-form" method = "GET" action="https://echo.htmlacademy.ru" enctype="text/plain")

		+e('h2').title Регистрация аккаунта

		+b.content
			+text-field({name: 'name', form: "registration-form", placeholder: 'Имя'})
			+text-field({name: 'surname', form: "registration-form", placeholder: 'Фамилия'})
			+b.sex
				+e('input')(type="radio" value="position.value" id="rb-man" name="position.name" checked)
				+b('label')(for="rb-man").checkbox-pos Мужчина
				+e('input')(type="radio" value="position.value" id="rb-woman" name="position.name" checked)
				+b('label')(for="rb-woman").checkbox-pos Женщина

			+date-control({title: 'Дата рождения', name: 'birthdate', form: "registration-form", placeholder: 'ДД.ММ.ГГГГ', pattern: '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}'}).birthdate

			+b.enter-data
				+e('h3').title данные для входа в сервис
				+text-field({type:'e-mail', name: 'email', form: "registration-form", placeholder: 'Email'})._email
				+text-field({type:'password', name: 'password', form: "registration-form", placeholder: 'Пароль'})._password

			+toggle-control({label:"Получать спецпредложения", form: "registration-form", name: "receive-special-offers", id: "receive-special-offers"})

			+button-submit({value: 'Перейти к оплате', form: 'registration-form'})

			+b.login Уже есть аккаунт на Toxin
				+btn-link({href:"sign-in.html", value:"Войти"})._login
