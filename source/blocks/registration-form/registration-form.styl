.registration-form
  size(380rem, 646rem)
  background-color background-color
  border 1rem solid rgba(0, 0, 0, 0.12)
  border-radius 4rem
  box-sizing border-box
  box-shadow 0 0 25rem rgba(0, 0, 0, 0.2)
  padding 40rem 29rem 30rem 29rem
  margin-top 4rem

  form
    display none

  &__title
    font bold 24rem Montserrat
    margin 0
    margin-bottom 10rem
    letter-spacing -0.5rem
    color main-color-100

  .content
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap wrap

    .date-control
      margin-top 24rem
      width 100%

      &__title
        text-transform uppercase
        font bold 12rem Montserrat

      &__arrow-down
        display none

    .enter-data
      margin-top 20rem

      &__title
        text-transform uppercase
        font bold 12rem Montserrat
        margin 0

      .text-field_email
        margin-top 5rem

      .text-field_password
        margin-top 10rem

    .sex
      display flex

      input
        display none

      input:checked + .checkbox-pos::after
        circle(12rem)

      input:checked + .checkbox-pos::before
        border-color button-color

      .checkbox-pos
        display flex
        font-size 14rem
        transition anim-duration
        margin-top 10rem
        position relative
        z-index 1

        &:hover
          color main-color-100

        &::after
          display block
          content ""
          position absolute
          top 4rem
          left 4rem
          background main-gradient
          box-sizing border-box

        &::before
          display block
          content ""
          circle(20rem)
          border 1rem solid main-color-25
          margin-right 10rem
          box-sizing border-box
          cursor pointer

        &:hover::before
          border-color button-color

        &:nth-of-type(2)
          margin-left 20rem

    .button-submit
      margin-top 24rem

    .login
      display flex
      align-items center
      justify-content space-between
      width 100%
      margin-top 30rem

      .btn-link_login
        size(99rem, 44rem)
        border-radius 22rem

        .btn-link__inner
          background background-color
          size(95rem, 40rem)
          border-radius 20rem
          color button-color
