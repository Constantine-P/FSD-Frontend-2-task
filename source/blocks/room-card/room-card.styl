@import '../../styles/*.styl'

.room-card
  width 270rem
  box-shadow 0 10rem 20rem rgba(31, 32, 65, 0.05)
  border-radius 4rem
  overflow hidden

  &__slider
    display block

  &__description
    padding 18rem 17rem 18rem 20rem
    position relative

  &__description-top
    display flex
    justify-content space-between
    border-bottom 1rem solid $dark-shade-10
    padding 0 0 10rem 0

  &__description-bottom
    display flex
    justify-content space-between
    margin-top 10rem

  &__room-number
    font-size 14rem
    font-weight bold
    letter-spacing -0.5rem
    font-family Quicksand, OpenSans, sans-serif

  &__number
    font-size 20rem
    display inline-block
    padding-top 1rem

  &__lux
    font-size 12rem
    text-transform uppercase
    margin-left 5rem
    letter-spacing 0.8rem
    font-weight bold
    color $button-color

  &__price
    display inline
    text-align right
    font-size 14rem
    line-height 20rem
    align-self flex-end
    font-family Montserrat, OpenSans, sans-serif
    font-weight bold
    color $dark-shade-50

  &__price-period
    font-weight normal
    font-size 12rem

  &__reviews
    font-size 14rem
    line-height 20rem
    font-weight normal
    text-transform capitalize
    margin-right 3rem

  &__review-number
    font-weight bold
    line-height 22rem

  &__rate
    display flex
    margin-left 2rem
    padding-bottom 1rem
