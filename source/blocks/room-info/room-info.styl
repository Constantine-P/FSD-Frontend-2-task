@import '../../styles/*.styl'

.room-info
  display block
  width 280rem
  font-size 14rem
  line-height 24rem

  @media (max-width 700px)
    display flex
    flex-direction column
    align-items center

  &__title
    font-size 19rem
    font-weight bold
    margin 0
    letter-spacing -0.5rem

  &__card
    display block

    &:not(:last-child)
      border-bottom 1rem solid $dark-shade-10
