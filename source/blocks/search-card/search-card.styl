@import '../../styles/*.styl'

.search-card
  background-color $background-color
  size(380rem, 374rem)
  border 1px solid rgba(0, 0, 0, 0.12)
  box-sizing border-box
  box-shadow 0 0 25rem rgba(0, 0, 0, 0.2)
  border-radius 4rem
  padding 40rem 30rem 30rem 30rem

  @media (max-width 400px)
    width 332rem
    padding 40rem 25rem 30rem 25rem

  &__title
    font-family Montserrat
    font-size 24rem
    margin 0
    letter-spacing -0.5rem
    color $dark-shade-100

  &__content
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap wrap

  &__stay-selector
    margin-top 22rem

  &__dropdown
    margin-top 20rem
    margin-bottom 31rem
    width 100%

  &__button
    height 44rem
    width 100%
    box-sizing border-box
