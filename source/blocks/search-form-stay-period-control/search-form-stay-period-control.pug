mixin search-form-stay-period-control(dates, formName)
	include ../date-control/date-control
	include ../calendar/calendar
	-if (!dates) dates = {arr:"", dep:""}
	+b.search-form-stay-period-control&attributes(attributes)
		+date-control({title: 'ПРИБЫТИЕ', name: 'arrival-date', form: formName, placeholder: 'ДД.ММ.ГГГГ', pattern: '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}', value: dates.arr}).date-control_arrival
		+date-control({title: 'ВЫЕЗД',  name: 'departure-date', form: formName, placeholder: 'ДД.ММ.ГГГГ', pattern: '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}', value: dates.dep}).date-control_departure
		+calendar
