.search-form
  background-color background-color
  size(380rem, 374rem)
  position absolute
  top 70rem
  left 140rem
  border 1px solid rgba(0, 0, 0, 0.12)
  box-sizing border-box
  box-shadow 0 0 25rem rgba(0, 0, 0, 0.2)
  border-radius 4rem
  padding 40rem 30rem 30rem 30rem

  &__header
    font-family Montserrat
    font-size 24rem
    margin 0
    letter-spacing -0.5rem
    color main-color-100

  &__content
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap wrap

  .button_find-room
    margin-top 31rem
    position relative

    &:hover
      filter brightness(92%)

    &::after
      display block
      position absolute
      content ''
      size(18rem)
      right 15rem
      background-image url("../../resources/arrow_forward.svg")
