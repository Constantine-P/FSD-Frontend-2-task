@import '../../styles/*.styl'

.sign-in-card
  background-color $background-color
  width 380rem
  min-height 358rem
  border 1rem solid rgba(0, 0, 0, 0.12)
  border-radius 4rem
  box-sizing border-box
  box-shadow 0 0 25rem rgba(0, 0, 0, 0.2)
  padding 40rem 29rem 30rem 29rem
  font-family Montserrat, OpenSans, sans-serif

  @media (max-width 400px)
    width 330rem
    padding 40rem 20rem 30rem 20rem

  &__title
    font-size 24rem
    line-height 30rem
    font-weight bold
    margin 0
    letter-spacing -0.5rem
    color $dark-shade-100

  &__email
    margin-top 20rem

  &__password
    margin-top 10rem

  &__enter-btn
    margin-top 20rem
    height 44rem

  &__create
    margin-top 30rem
    display flex
    flex-direction row
    justify-content space-between
    align-items center

  &__create-btn
    size(99rem, 44rem)
