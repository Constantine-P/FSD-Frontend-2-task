.sign-in-form
  background-color background-color
  size(380rem, 358rem)
  border 1rem solid rgba(0, 0, 0, 0.12)
  border-radius 4rem
  box-sizing border-box
  box-shadow 0 0 25rem rgba(0, 0, 0, 0.2)
  padding 40rem 29rem 30rem 29rem

  form
    display none

  &__title
    font bold 24rem Montserrat
    margin 0
    margin-bottom 10rem
    letter-spacing -0.5rem
    color main-color-100

  .content
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap wrap

    .button-submit
      margin-top 20rem

    .login
      display flex
      align-items center
      justify-content space-between
      width 100%
      margin-top 30rem

      .btn-link_login
        size(99rem, 44rem)
        border-radius 22rem

        .btn-link__inner
          background background-color
          size(95rem, 40rem)
          border-radius 20rem
          color button-color
