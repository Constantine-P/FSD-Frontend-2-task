@import '../../styles/*.styl'

.toggle-control
  display block
  padding-top 7.5rem
  padding-bottom 7.5rem

  &__input
    display none

  &__input:checked + .toggle-control__label:after
    display block
    background $button-color
    transform translateX(20rem)

  &__input:checked + .toggle-control__label:before
    border-color $button-color

  &__label
    display flex
    font-size 14rem
    transition $anim-duration
    position relative
    z-index 1

    &:hover
      color $dark-shade-100

    &:after
      display block
      content ''
      position absolute
      top 4rem
      left 4rem
      background $dark-shade-25
      circle(12rem)
      box-sizing border-box
      transition $anim-duration

    &:before
      display block
      content ''
      size(40rem, 20rem)
      min-size(20rem)
      border 1rem solid $dark-shade-25
      border-radius 10rem
      margin-right 10rem
      box-sizing border-box
      cursor pointer
