@import '../../styles/*.styl'

.filter
  display grid
  grid-template-columns 266.5rem 1fr
  grid-column-gap 59.5rem
  padding 10rem 20rem 0 20rem
  max-width 1200rem
  flex 1 0 auto
  width 100%
  margin auto
  box-sizing border-box

  @media (max-width 1000px)
    grid-template-columns 1fr
    grid-template-rows auto 1fr

  &__list
    display flex
    justify-content center
    transition $anim-duration

    @media (max-width 1000px)
      max-height 0
      overflow hidden

  &__toggle
    display none

    &:checked ~ .filter__toggle-label
      background $secondary-gradient

      &::after
        animation anim-arrow-open $anim-duration forwards

    &:checked ~ .filter__list
      max-height 10000rem

  &__toggle-label
    display none
    position relative
    user-select none
    cursor pointer
    margin auto

    @media (max-width 1000px)
      width 100%
      max-width 270rem
      height 35rem
      background $secondary-gradient
      font-weight bold
      color $secondary-text-color
      display flex
      align-items center
      justify-content center
      font-size 18rem
      border-radius 5rem
      align-self center
      justify-self center

    &::after
      display block
      content ''
      background $background-color
      clip-path $arrow-up
      transition $anim-duration
      size(16.8rem, 10.4rem)
      box-sizing border-box
      animation anim-arrow-close $anim-duration forwards
      margin-left 15rem
