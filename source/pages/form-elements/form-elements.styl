@import '../../styles/*.styl'

.form-elements
  max-width 1440rem
  width 100%
  margin 0 auto
  font-family Montserrat, OpenSans, sans-serif

  &__cells
    display grid
    grid-template-columns 320rem 266rem 320rem
    grid-template-rows 633rem 845rem
    grid-gap 100rem 126rem
    max-width 1158rem
    margin auto
    margin-top 65rem

  &__cell-1
    grid-column 1 / 2
    grid-row 1 / 2

  &__cell-2
    grid-column 1 / 2
    grid-row 2 / 3

  &__cell-3
    grid-column 2 / 3
    grid-row 1 / 2

  &__cell-4
    grid-column 2 / 4
    grid-row 2 / 3

  &__cell-4-wrapper
    display grid
    grid-template-columns 320rem 320rem
    grid-template-rows 235rem 292rem 200rem
    grid-gap 85rem 72rem

  &__cell-7
    grid-column 3 / 4
    grid-row 1 / 2

  &__logo
    margin-left 30rem

  &__left
    display block

  &__text-field-hover
    margin-top 20.5rem

  &__dropdown-guests
    margin-top 20.5rem

    &_bottom
      margin-top 0

  &__masked-text-field
    margin-top 24rem

  &__stay-selector
    margin-top 40rem

  &__filter-date-dropdown
    margin-top 41rem

  &__subscription-text-field
    margin-top 41rem

  &__dropdown-narrow-default
    width 266rem

  &__dropdown-narrow-expanded
    margin-top 20rem
    width 266rem

  &__checkbox-list-1
    margin-top 172rem
    width 266rem

  &__checkbox-list-2
    margin-top 42rem
    width 266rem

  &__room-info-cards
    margin-top 21rem
    width 266rem

  &__room-info-card
    border-bottom 1rem solid $dark-shade-10
    width 280rem

  &__filter-date-dropdown, &__subscription-text-field, &__dropdown-narrow
    width 266rem

  &__checkbox-buttons
    width 230rem
    margin-top 0

  &__radio-buttons
    width 220rem
    margin-top 43rem

  &__radio-buttons-title
    display block
    margin 0
    text-transform uppercase
    font-size 12rem

  &__radio-buttons-content
     display flex
     flex-direction row
     justify-content space-between
     margin-top 17rem

  &__toggle-buttons
    width 260rem
    margin-top 41rem

  &__toggle-buttons-title
    display block
    margin 0
    text-transform uppercase
    font-size 12rem

  &__toggle-buttons-content
     display block
     margin-top 7.5rem

  &__like-buttons
    width 90rem
    margin-top 37rem

  &__like-buttons-title
    display block
    margin 0
    text-transform uppercase
    font-size 12rem

  &__like-buttons-content
    display flex
    flex-direction row
    justify-content space-between
    margin-top 16rem
    
  &__rate-buttons
    width 259rem
    margin-top 40rem

  &__rate-buttons-title
    display block
    margin 0
    text-transform uppercase
    font-size 12rem

  &__rate-buttons-content
    display flex
    flex-direction row
    justify-content space-between
    margin-top 18rem
    padding-left 1rem

  &__rich-checkbox-buttons
    max-width 260rem
    grid-column 1 / 2
    grid-row 2 / 3

  &__price-range-slider
    max-width 266rem
    margin-top 1rem

  &__buttons
    margin-top 43rem

  &__buttons-title
    margin 0 0 16rem 0
    text-transform uppercase
    font-size 12rem

  &__buttons-wrapper
    display flex
    flex-wrap wrap
    max-width 240rem
    margin 2rem 0 0 1rem

  &__button-item
    size(auto, 44rem)
    margin-bottom 30rem
    margin-right 18rem

  &__button-item-small
    margin 1rem 20rem 31rem 0

  &__button-item-long
    size(320rem, 44rem)

  &__pagination
    margin-top 41rem
    margin-left 1rem
    max-width 240rem

  &__pagination-title
    margin 0 0 16rem 0
    text-transform uppercase
    font-size 12rem

  &__bullet-list
    grid-column 2 / 3
    grid-row 2 / 3
    max-width 260rem

  &__review
    grid-column 1 / 3
    grid-row 3 / 4
