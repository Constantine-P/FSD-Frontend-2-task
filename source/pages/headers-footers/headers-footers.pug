extends ../layouts/ui-kit-layout/ui-kit-layout
include ../../blocks/kit-logo/kit-logo
include ../../blocks/page-header/page-header
include ../../blocks/page-footer/page-footer

block title
  | Headers & footers
block main
  +b.headers-footers
    -
      const headerMenu = [
        { name: "Home", href: "mock.html", mode: "bold" },
        { name: "About Us", href: "mock.html" },
        { name: "Services", href: "mock.html",
          dropdown: [
            { name: "First service", href: "mock.html" },
            { name: "Second service", href: "mock.html" },
          ]
        },
        { name: "Careers", href: "mock.html" },
        { name: "News", href: "mock.html" },
        { name: "Documentation", href: "mock.html"},
      ]
      const footer = {
        description: "Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.",
        subscription: {
          title: "Subscribe to our newsletter",
          description: "Receive our latest news and promotions in your inbox!",
          placeholder: "Your email address",
        },
        socials: [
          {
            logoSrc: "../../blocks/page-footer/images/twitter.svg",
            logoAlt: "twitter",
            href: "mock.html",
          },
          {
            logoSrc: "../../blocks/page-footer/images/facebook.svg",
            logoAlt: "facebook",
            href: "mock.html",
          },
          {
            logoSrc: "../../blocks/page-footer/images/instagram.svg",
            logoAlt: "instagram",
            href: "mock.html",
          },
        ],
        copyright: "Copyright Â© 2018 Toxin UI Kit. All rights reserved.",
      }

    +e.header
      +page-header({
        menu: headerMenu,
        auth: {
          isLoggedIn: false,
          name: "Cosmin Negoita",
          login: {name: "login", href: "sign-in.html"},
          register: {name: "register", href: "registration.html"},
        }
      })
    +e.header
      +page-header({
        menu: headerMenu,
        auth: {
          isLoggedIn: true,
          name: "Cosmin Negoita",
          login: {name: "login", href: "sign-in.html"},
          register: {name: "register", href: "registration.html"},
        }
      })
    +e.footer
      +page-footer(footer)
    +e.footer
      +page-footer(footer)._small
