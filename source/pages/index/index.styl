@import '../layouts/base-layout/base-layout.styl'

.landing
  min-width 320px
  min-height 520rem
  width 100%
  height 1px
  flex 1 0 auto
  background-image url('images/landing-page-bg.jpg')
  background-repeat no-repeat
  background-size cover
  background-position bottom

  &__content
    display flex
    flex-direction column
    justify-content space-between
    max-width 1200rem
    min-height 100%
    height 100%
    margin auto

    @media (max-width: 1000px)
      align-items center
      justify-content space-around

  &__search-card
    margin 70rem 0 0 20rem
    align-self flex-start

    @media (max-width 1000px)
      align-self center
      margin 20rem

  &__description
    width 300rem
    text-align right
    line-height 24rem
    align-self flex-end
    margin 20rem 15rem 23rem 20rem
