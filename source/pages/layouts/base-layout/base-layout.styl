@import '../../../styles/*.styl'

html
  font-size 1px
  font-family Montserrat, OpenSans, sans-serif
  height 100%
  background-color $background-color
  color $main-text-color

  @media (max-width 400px)
    font-size 0.9px

body
  margin 0
  padding 0
  font-size 14rem
  height 100%

  .page-wrapper
    display flex
    flex-direction column
    margin auto
    min-height 100%

    &__logo
      padding 30rem 0 0 30rem

  .hidden
    display none
