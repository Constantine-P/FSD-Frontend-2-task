@import '../../styles/*.styl'

.room-details
  max-width 1440px
  width 100%
  flex 1 0 auto
  border-bottom 1rem solid $dark-shade-25

  &__wrapper
    display flex
    justify-content space-between
    margin 70rem auto 0 auto
    max-width 1200rem
    padding 0 20rem 0 20rem
    box-sizing border-box

    @media (max-width 1100px)
      flex-direction column
      align-items center
      justify-content flex-start

    @media (max-width 700px)
      margin 30rem auto 0 auto

  &__description
    display flex
    justify-content space-between
    flex-wrap wrap
    max-width 723rem
    box-sizing border-box

    @media (max-width 700px)
      flex-direction column
      align-items center
      justify-content flex-start
      max-width 100%

  &__bullet-list
    max-width 260rem
    margin 33rem 0 0 0

    @media (max-width 1000px)
      max-width 100%
      margin 15rem

  &__room-cancel
    max-width 325rem
    margin 33rem 37rem 0 0

    @media (max-width 1000px)
      margin 15rem
      max-width 100%

  &__reviews
    margin 33rem 37rem 0 0
    max-width 100%
    box-sizing border-box

    @media (max-width 1000px)
      padding 10rem
      margin 0

  &__booking-card
    @media (max-width 1100px)
      margin 0 0 40rem 0

  &__info
    @media (max-width 700px)
      margin 0 0 30rem 0

  &__room-impressions
    @media (max-width 700px)
      margin 0 0 30rem 0
